{
    "name": "nku640/todo-rest-api",
    "description": "TODO REST API for personal task management",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "TodoApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TodoApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    }
}
